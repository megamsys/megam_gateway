description "Vertice gateway(https://www.megam.io)"
author "Rajthilak <rajthilak@megam.io>"

# When to start the servicee
start on runlevel [2345]
start on (started networking)

# When to stop the service
stop on runlevel [016]
stop on (stopping networking)
stop on (stopped virtenginegateway)

# Automatically restart process if crashed. Tries 0 times every 60 seconds
respawn
respawn limit 0 60

script
    export HOME="/root"
    cd /usr/share/megam/virtenginegateway/bin/
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) virtenginegateway daemonizing" >> /var/log/megam/virtenginegateway/virtenginegateway.log
    exec sudo ./virtenginegateway -Dlogger.file=/var/lib/megam/virtenginegateway/logger.xml -Dconfig.file=/var/lib/megam/virtenginegateway/gateway.conf >> /var/log/megam/virtenginegateway/virtenginegateway.log 2>&1
end script

pre-start script
 [ -d /var/log/megam/virtenginegateway ] || mkdir -p /var/log/megam/virtenginegateway
 [ -d /var/run/megam ] || mkdir -p /var/run/megam
 if [ -f "/usr/share/megam/virtenginegateway/RUNNING_PID" ]; then
        rm /usr/share/megam/virtenginegateway/RUNNING_PID
 fi
 echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) starting" >> /var/log/megam/virtenginegateway/virtenginegateway.log
end script

pre-stop script
    rm /usr/share/megam/virtenginegateway/RUNNING_PID
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) virtenginegateway tata bye!" >> /var/log/megam/virtenginegateway/virtenginegateway.log
end script
